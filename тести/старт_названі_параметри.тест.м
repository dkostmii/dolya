тестовий_випадок(
  назва="Порожній тест є успішним",
  сценарій=дія()
    друк(якесь_повідомлення="Цей тест є успішним!")
  кінець
)

тестовий_випадок(
  назва="Тест, що провалиться",
  сценарій=дія()
    провалити(повідомлення="Цей тест провалився ;(")
  кінець
)

тестовий_випадок(
  назва="1 != 1",
  сценарій=дія()
    припустити(значення=1).не_().дорівнює(очікуване_значення=1)
  кінець
)

тестовий_випадок(
  назва="Порожній список не є пусто",
  сценарій=дія()
    припустити(значення=[]).не_().є_пусто()
  кінець
)

тестовий_випадок(
  назва="Так не є так",
  сценарій=дія()
    припустити(значення=так).не_().є_вірне()
  кінець
)

тестовий_випадок(
  назва="Дія не падає",
  сценарій=дія()
    дія дія_що_падає()
      впасти "Дія падає"
    кінець

    припустити(значення=дія_що_падає).не_().падає()
  кінець
)

тестовий_випадок(
  назва="Пустий список має довжину 1",
  сценарій=дія()
    припустити(значення=[]).має_довжину(очікувана_довжина=1)
  кінець
)

тестовий_випадок(
  назва="Мій список містить двійку",
  сценарій=дія()
    мій_список = [1, 2, 3]

    припустити(значення=мій_список).містить_елемент(елемент=2)
  кінець
)

тестовий_випадок(
  назва="Мій список еквівалентний самому собі",
  сценарій=дія()
    мій_список = [1, 2, 3]

    припустити(значення=мій_список).еквівалентний_списку(очікуваний_список=мій_список)
  кінець
)
