тестовий_випадок("Порожній тест є успішним", дія()
  друк("Цей тест є успішним!")
кінець)

тестовий_випадок("Тест, що провалиться", дія()
  провалити("Цей тест провалився ;(")
кінець)

тестовий_випадок("1 != 1", дія()
  припустити(1).не_().дорівнює(1)
кінець)

тестовий_випадок("Порожній список не є пусто", дія()
  припустити([]).не_().є_пусто()
кінець)

тестовий_випадок("Так не є так", дія()
  припустити(так).не_().є_вірне()
кінець)

тестовий_випадок("Дія не падає", дія()
  дія дія_що_падає()
    впасти "Дія падає"
  кінець

  припустити(дія_що_падає).не_().падає()
кінець)

тестовий_випадок("Пустий список має довжину 1", дія()
  припустити([]).має_довжину(1)
кінець)

тестовий_випадок("Мій список містить двійку", дія()
  мій_список = [1, 2, 3]

  припустити(мій_список).містить_елемент(2)
кінець)

тестовий_випадок("Мій список еквівалентний самому собі", дія()
  мій_список = [1, 2, 3]

  припустити(мій_список).еквівалентний_списку(мій_список)
кінець)
